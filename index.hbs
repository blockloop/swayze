{{! Each post will be output using this markup }}
<div class="posts">
{{#foreach posts}}
    <section class="post {{post_class}}">
        <header class="post-header">
            {{#if @blog.logo}}
                <img class="post-avatar" width="48" height="48" src="{{@blog.logo}}" alt="Blog Logo" />
            {{/if}}

            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>

            <p class="post-meta">
                Posted <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> {{tags prefix="on "}}
            </p>
        </header>

        <div class="post-description">
            <p>{{excerpt}}&hellip;</p>
        </div>
    </section>


{{/foreach}}
</div>

